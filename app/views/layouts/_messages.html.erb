<%# Rails flash messages styled for Zurb Foundation %>
<div class="row small-5 colummn center">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>    
      <div data-alert class="alert-box <%= name == :notice ? "success" : "alert" %>">
        <%= content_tag :div, msg %>
        <a href="#" class="close">&times;</a>
      </div>        
    <% end %>
  <% end %>
</div>

