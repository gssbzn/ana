<%= render 'home/side_nav' %>

<div class ="small-8 large-4 colummn center row">
  <h2><%= t(:sign_in, scope:'session') %></h2>
  
  <%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
    <%= f.input :login, placeholder: t(:login, scope:'activerecord.hints.user'), :autofocus => true %>
    <%= f.input :password, as:'password' %>   
    <%= f.input :remember_me, inline_label: 'Yes, remember me', as: :boolean, boolean_style: :inline %>
    <%= f.button :submit, (t(:sign_in, scope:'session')), data: { disable_with: (t(:logging_in, scope:'session')) } %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

