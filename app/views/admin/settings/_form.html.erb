
<%= simple_form_for(@setting, :url => admin_settings_path, :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :app_name, :required => true, :autofocus => true %>
    <%= f.input :app_description, :required => true %>
    <%= f.input :author, :required => true %>      
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
